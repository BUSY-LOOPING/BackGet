    <com.google.android.material.tabs.TabLayout
        android:id="@+id/innerTabLayout"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:maxWidth="0dp"
        android:maxHeight="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicator="@drawable/inner_tab_indicator"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorColor="@color/inner_custom_separator"
        app:tabIndicatorGravity="center"
        app:tabIndicatorHeight="20dp"
        app:tabMode="scrollable"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/inner_tabIndicator_text"
        app:tabTextAppearance="@style/MyCustomTextAppearance_InnerTabLayout"
        app:tabTextColor="#666666" />


